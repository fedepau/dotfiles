# system aliases
alias sdn="sudo shutdown -h now"
alias rn="sudo reboot -h now"
alias hibernate="sudo loginctl hibernate"

# software aliases
alias bm="bashmount"
alias gp="gnuplot"
alias ll="ls -alh --color=auto"
alias ls="ls --color=auto"
alias lo="libreoffice"
alias cp="advcp -g"
alias mv="advmv -g"

# GnuPG
alias gpg2="gpg2 --homedir "$XDG_DATA_HOME"/gnupg"

# pacman
alias pacman="sudo pacman"
function bacpac() { pacman -Qi | grep -E "Name|Install Date" | grep -B 1 "$1 $2"; }

# rsync
alias rsync-copy='rsync -avz --progress -h'
alias rsync-move='rsync -avz --progress -h --remove-source-files'
alias rsync-synchronize='rsync -avzu --delete --progress -h'
alias rsync-update='rsync -avzu --progress -h'

alias vim="nvim"
alias wttr="curl wttr.in/@147.122.1.160"
alias z="zathura"

# OpenRC
alias rc-service="sudo rc-service"
alias rc-update="sudo rc-update"

# XCrySDen
alias xcrin="xcrysden --pwi"
alias xcrout="xcrysden --pwo"
alias xcryz="xcrysden --xyz"

# pushd
alias d='dirs -v'
